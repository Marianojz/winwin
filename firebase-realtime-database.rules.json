{
  "rules": {
    "auctions": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$auctionId": {
        ".read": true,
        ".write": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || (!newData.hasChild('title') && !newData.hasChild('description') && !newData.hasChild('status') && !newData.hasChild('endTime') && !newData.hasChild('startingPrice') && !newData.hasChild('createdBy')))",
        "currentPrice": {
          ".read": true,
          ".write": "auth != null"
        },
        "lastBidAt": {
          ".read": true,
          ".write": "auth != null"
        },
        "bids": {
          ".read": true,
          ".write": "auth != null",
          "$bidId": {
            ".read": true,
            ".write": "auth != null && (!data.exists() || data.child('userId').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
            ".validate": "newData.hasChildren(['id', 'auctionId', 'userId', 'username', 'amount', 'createdAt']) && newData.child('userId').isString() && newData.child('username').isString() && newData.child('amount').isNumber() && newData.child('amount').val() > 0"
          }
        }
      }
    },
    "products": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true"
    },
    "orders": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$orderId": {
        ".read": "auth != null",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || (newData.exists() && newData.hasChild('userId') && newData.child('userId').val() == auth.uid))"
      }
    },
    "messages": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$conversationId": {
        ".read": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/))",
        ".write": "auth != null",
        "$messageId": {
          ".read": "auth != null && (data.child('fromUserId').val() == auth.uid || data.child('toUserId').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
          ".write": "auth != null && (newData.child('fromUserId').val() == auth.uid || newData.child('toUserId').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
        }
      }
    },
    "conversations": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$conversationId": {
        ".read": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/) || $conversationId == ('admin_' + auth.uid))",
        ".write": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/) || $conversationId == ('admin_' + auth.uid))",
        "status": {
          ".read": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/) || $conversationId == ('admin_' + auth.uid))",
          ".write": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/) || $conversationId == ('admin_' + auth.uid))"
        },
        "priority": {
          ".read": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/) || $conversationId == ('admin_' + auth.uid))",
          ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true"
        },
        "type": {
          ".read": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/) || $conversationId == ('admin_' + auth.uid))",
          ".write": "auth != null && (root.child('users').child(auth.uid).child('isAdmin').val() == true || $conversationId.matches(/^admin_.*/) || $conversationId == ('admin_' + auth.uid))"
        }
      }
    },
    "homeConfig": {
      ".read": true,
      ".write": "auth != null && (auth.uid == 'admin' || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "notifications": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        ".write": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        "$notificationId": {
          ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
          ".write": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
        }
      }
    },
    "users": {
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        ".write": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        "avatar": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $userId"
        },
        "username": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $userId"
        },
        "email": {
          ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
          ".write": "auth != null && auth.uid == $userId"
        },
        "isAdmin": {
          ".read": "auth != null",
          ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true"
        }
      }
    },
    "userPreferences": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId"
      }
    },
    "bots": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null && (auth.uid == 'admin' || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
    },
    "action_logs": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null"
    },
    "tracking_clicks": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null"
    },
    "tracking_searches": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null"
    },
    "orderTransactions": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true"
    },
    "orderTransactionsByOrder": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true"
    },
    "orderSequences": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true"
    },
    "adminSettings": {
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        ".write": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    },
    "tickets": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$ticketId": {
        ".read": "auth != null && (data.child('userId').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        ".write": "auth != null && (newData.child('userId').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        ".validate": "auth != null && (newData.child('userId').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)"
      }
    },
    "contactMessages": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$messageId": {
        ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
        ".write": "auth != null"
      }
    },
    "announcements": {
      ".read": "auth != null",
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$announcementId": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
        ".validate": "newData.hasChildren(['title', 'content', 'type', 'status', 'priority', 'createdAt', 'createdBy']) && newData.child('title').isString() && newData.child('content').isString() && newData.child('type').val().matches(/^(text|image|urgent|promotional)$/) && newData.child('status').val().matches(/^(active|expired|draft)$/) && newData.child('priority').val().matches(/^(low|medium|high)$/)"
      }
    },
    "user_announcements": {
      "$userId": {
        ".read": "auth != null && auth.uid == $userId",
        ".write": "auth != null && auth.uid == $userId",
        "$announcementId": {
          ".read": "auth != null && auth.uid == $userId",
          ".write": "auth != null && auth.uid == $userId",
          ".validate": "newData.hasChildren(['read', 'dismissed']) && newData.child('read').isBoolean() && newData.child('dismissed').isBoolean()"
        }
      }
    },
    "announcement_engagement": {
      ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      ".write": "auth != null",
      "$announcementId": {
        ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
        ".write": "auth != null",
        "$engagementId": {
          ".read": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
          ".write": "auth != null && (newData.child('userId').val() == auth.uid || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
          ".validate": "newData.hasChildren(['announcementId', 'userId', 'action', 'timestamp']) && newData.child('action').val().matches(/^(view|click|dismiss|link_click|image_click)$/)"
        }
      }
    },
    "blog": {
      ".read": true,
      ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true",
      "$postId": {
        ".read": true,
        ".write": "auth != null && root.child('users').child(auth.uid).child('isAdmin').val() == true"
      }
    },
    "user_likes": {
      "$userId": {
        ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
        ".write": "auth != null && auth.uid == $userId",
        "$productId": {
          ".read": "auth != null && (auth.uid == $userId || root.child('users').child(auth.uid).child('isAdmin').val() == true)",
          ".write": "auth != null && auth.uid == $userId",
          ".validate": "!newData.exists() || (newData.hasChildren(['productId', 'productName', 'productCategory', 'timestamp']) && newData.child('productId').isString() && newData.child('productName').isString() && newData.child('productCategory').isString() && newData.child('timestamp').isString())"
        }
      }
    },
    "product_likes": {
      ".read": "auth != null",
      ".write": "auth != null",
      "$productId": {
        ".read": "auth != null",
        ".write": "auth != null",
        "$userId": {
          ".read": "auth != null",
          ".write": "auth != null && auth.uid == $userId",
          ".validate": "!newData.exists() || (newData.hasChildren(['userId', 'timestamp']) && newData.child('userId').isString() && newData.child('timestamp').isString())"
        }
      }
    }
  }
}
