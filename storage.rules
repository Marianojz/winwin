rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function para verificar si es admin
    // Nota: Storage rules no puede acceder directamente a Firestore
    // Esta función verifica desde Realtime Database (que se sincroniza con Firestore)
    // Alternativamente, puedes verificar directamente en cada regla usando Realtime Database
    
    // Imágenes de subastas - Lectura pública, escritura solo autenticados
    // Nota: La validación de admin se debe hacer en el código de la aplicación
    // ya que Storage rules no puede acceder fácilmente a Firestore
    match /auctions/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB máximo
                      request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }
    
    // Imágenes de productos - Lectura pública, escritura solo autenticados
    match /products/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB máximo
                      request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }
    
    // Avatares de usuarios - Lectura pública, escritura solo el propio usuario
    match /avatars/{userId}/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.auth.uid == userId &&
                      request.resource.size < 2 * 1024 * 1024 && // 2MB máximo
                      request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }
    
    // Imágenes generales - Lectura pública, escritura solo autenticados
    match /images/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB máximo
                      request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }
    
    // Banners y promociones - Lectura pública, escritura solo autenticados
    match /banners/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB máximo
                      request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }
    
    // Logo del sitio - Lectura pública, escritura solo autenticados
    match /logo/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB máximo
                      request.resource.contentType.matches('image/(jpeg|jpg|png|webp|svg)');
    }
    
    // Anuncios - Lectura pública, escritura solo autenticados
    match /announcements/{imageId} {
      allow read: if true;
      allow write: if request.auth != null && 
                      request.resource.size < 5 * 1024 * 1024 && // 5MB máximo
                      request.resource.contentType.matches('image/(jpeg|jpg|png|webp)');
    }
    
    // Denegar todo lo demás por defecto
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}

